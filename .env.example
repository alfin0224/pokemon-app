# Pokemon App Configuration Template
# Copy this file to .env and configure your environment variables

# API Configuration
VITE_API_BASE_URL=https://pokeapi.co/api/v2
VITE_API_TIMEOUT=10000

# Image Configuration
VITE_POKEMON_SPRITE_BASE_URL=https://raw.githubusercontent.com/PokeAPI/sprites/master/sprites/pokemon/other/official-artwork
VITE_POKEMON_FALLBACK_SPRITE_URL=https://raw.githubusercontent.com/PokeAPI/sprites/master/sprites/pokemon

# App Configuration
VITE_APP_NAME=Pokemon App
VITE_APP_VERSION=1.0.0
VITE_APP_ENV=development

# Cache Configuration (in minutes)
VITE_CACHE_STALE_TIME=5
VITE_CACHE_TIME=30

# Pagination Configuration
VITE_DEFAULT_PAGE_SIZE=20
VITE_MAX_PAGE_SIZE=100

# Performance Configuration
VITE_API_RETRY_COUNT=3
VITE_API_RETRY_DELAY=1000
